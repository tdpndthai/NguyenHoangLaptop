@using NguyenHoangLaptop.Models;

@model IEnumerable<SanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
    //khởi tạo control webgrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 20);
}
@* thể hiện dữ liệu thông qua control webgrid*@
@grid.GetHtml(
    tableStyle:"gridTable",
    headerStyle:"gridHead",
    footerStyle:"gridFooter",
    rowStyle:"gridRow",
    alternatingRowStyle:"gridAltRow",
    columns: grid.Columns(
    grid.Column("MaSP","Tên sản phẩm"),
    grid.Column("TenSP","Tên SP"),
    //grid.Column("MoTa","Mô tả",format:p=>Html.Raw(p.MoTa)),
    grid.Column("HinhAnh", "Hình ảnh", format: p => Html.Raw("<img src=\"../Content/trangweb/images/" +p.HinhAnh + "\" style=\"height:100px;width:150px\">")),
    grid.Column(format:p=>Html.ActionLink("Chỉnh sửa","ChinhSua",new { id=p.MaSP})),
    grid.Column(format:p=>Html.ActionLink("Xóa","Xoa",new { id = p.MaSP}))
    )
)

<style>

    .gridHead {
        background-color: green
    }

        .gridHead > th > a {
            color: white
        }

    /*.gridRow{
        color:black;
        background-color:blue
    }*/

    .gridAltRow {
        border: 1px solid black;
    }

    .gridFooter {
        font-weight: bold
    }

    .gridTable {
        width: 100%;
        border: 1px solid black
    }

        .gridTable > th, td {
            border: 1px solid orange;
            text-align: center;
        }
</style>




